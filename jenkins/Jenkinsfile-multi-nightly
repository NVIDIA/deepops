pipeline {
  agent any
  environment {
    DEEPOPS_FULL_INSTALL = 'true'
    DEEPOPS_VAGRANT_OS = 'ubuntu'
  }
  stages {
    stage('Stop Any Old Builds') {
      steps {
        milestone label: '', ordinal:  Integer.parseInt(env.BUILD_ID) - 1
        milestone label: '', ordinal:  Integer.parseInt(env.BUILD_ID)
      }
    }
    stage('Cluster Up - Ubuntu') {
      steps {
        // TODO: ideally lock should work with declared stages
        lock(resource: null, label: 'gpu', quantity: 2, variable: 'GPUDATA') {
          echo "Munge files for testing"
          sh '''
            ./.jenkins-scripts/munge-files.sh
          '''

          echo "Vagrant Up"
          sh '''
            ./.jenkins-scripts/vagrant-startup.sh
          '''

          echo "Cluster Up - Multiple GPU & MGMT Nodes"
          sh '''
            ./.jenkins-scripts/test-cluster-up.sh
          '''

          echo "Verify we can run a GPU job"
          sh '''
            timeout 500 ./.jenkins-scripts/run-gpu-job.sh
          '''

          echo "Verify ingress config"
          sh '''
             ./.jenkins-scripts/verify-ingress-config.sh
          '''

          echo "Test Rook+Ceph installation"
          sh '''
             timeout 2200 ./.jenkins-scripts/test-ceph.sh
          '''

          echo "Test Kubeflow installation"
          sh '''
             timeout 1500 ./.jenkins-scripts/test-kubeflow.sh
          '''

          echo "Test Monitoring installation"
          sh '''
             timeout 800 ./.jenkins-scripts/test-monitoring.sh
          '''

          echo "Test Dashboard installation"
          sh '''
             timeout 180 ./.jenkins-scripts/test-dashboard.sh
          '''

          echo "Start new virtual environment pre-Slurm checks"
          sh '''
            cd virtual
            ./vagrant_shutdown.sh
            ./vagrant_startup.sh
          '''

          echo "Set up Slurm"
          sh '''
            ./.jenkins-scripts/test-setup-slurm.sh
          '''

          echo "Test Slurm"
          sh '''
            timeout 60 ./.jenkins-scripts/test-slurm-job.sh
          '''

          echo "Reset repo and unmunge files"
          sh '''
            git reset --hard
            rm -rf config
          '''

          echo "Tear down Vagrant before next cluster-up"
          sh '''
            pwd
            cd virtual && ./vagrant_shutdown.sh
          '''
        }
      }
    }
    stage('Cluster Up - CentOS') {
      environment {
        DEEPOPS_VAGRANT_OS = 'centos'
      }
      steps {
        // TODO: ideally lock should work with declared stages
        lock(resource: null, label: 'gpu', quantity: 2, variable: 'GPUDATA') {
          echo "Munge files for testing"
          sh '''
            ./.jenkins-scripts/munge-files.sh
          '''

          echo "Vagrant Up"
          sh '''
            ./.jenkins-scripts/vagrant-startup.sh
          '''

          echo "Cluster Up - Multiple GPU & MGMT Nodes"
          sh '''
            ./.jenkins-scripts/test-cluster-up.sh
          '''

          echo "Verify we can run a GPU job"
          sh '''
            timeout 500 ./.jenkins-scripts/run-gpu-job.sh
          '''

          echo "Verify ingress config"
          sh '''
             ./.jenkins-scripts/verify-ingress-config.sh
          '''

          echo "Test Rook+Ceph installation"
          sh '''
             timeout 2200 ./.jenkins-scripts/test-ceph.sh
          '''

          echo "Test Kubeflow installation"
          sh '''
             timeout 1500 ./.jenkins-scripts/test-kubeflow.sh
          '''

          echo "Test Monitoring installation"
          sh '''
             timeout 800 ./.jenkins-scripts/test-monitoring.sh
          '''

          echo "Test Dashboard installation"
          sh '''
             timeout 180 ./.jenkins-scripts/test-dashboard.sh
          '''

          echo "Start new virtual environment pre-Slurm checks"
          sh '''
            cd virtual
            ./vagrant_shutdown.sh
            ./vagrant_startup.sh
          '''

          echo "Set up Slurm"
          sh '''
            ./.jenkins-scripts/test-setup-slurm.sh
          '''

          echo "Test Slurm"
          sh '''
            timeout 60 ./.jenkins-scripts/test-slurm-job.sh
          '''
        }
      }
    }
  }
  post {
    always {
      sh '''
        pwd
        cd virtual && ./vagrant_shutdown.sh
      '''
    }
  }
}
